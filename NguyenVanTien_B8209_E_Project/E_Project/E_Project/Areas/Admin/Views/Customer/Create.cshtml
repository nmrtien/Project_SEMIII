
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model E_Project.Areas.Admin.Model.CustomerModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12 text-center">
                    <div class="p-5 text-center">
                        <div class="form-group col-lg-12 text-center">
                            <h1 class="h4 text-gray-900 mb-4">CREATE CUSTOMER</h1>
                        </div>

                        @using (Html.BeginForm())
                        {

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">ACCOUNT</label>
                                @Html.TextBoxFor(model => model.account, new { @class = "form-control form-control-user", @placeholder = "account..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">PASSWORD</label>
                                @Html.TextBoxFor(model => model.password, new { @class = "form-control form-control-user", @placeholder = "password..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">CUSTOMER NAME</label>
                                @Html.TextBoxFor(model => model.customerName, new { @class = "form-control form-control-user", @placeholder = "customer name..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">PHONE</label>
                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control form-control-user", @placeholder = "phone..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">ADDRESS</label>
                                @Html.TextBoxFor(model => model.address, new { @class = "form-control form-control-user", @placeholder = "address..." })

                            </div>
                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">DESCRIPTION</label>
                                @Html.TextBoxFor(model => model.description, new { @class = "form-control form-control-user", @placeholder = "description..." })

                            </div>


                            @*<div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">PLAN</label>
                                @Html.DropDownListFor(n => n.planId, new SelectList(Model.planList, "id", "modelName"), new { @class = "form-control form-control-user" })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">EXPRIRE DATE</label>
                                @Html.TextBoxFor(model => model.planDetail.exprireDate, new { @class = "form-control form-control-user", @type = "date" })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">AMOUNT</label>
                                @Html.TextBoxFor(model => model.planDetail.amount, new { @class = "form-control form-control-user", @placeholder = "Amout...", @type = "number" })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">DETAIL</label>
                                @Html.TextBoxFor(model => model.planDetail.detail, new { @class = "form-control form-control-user", @placeholder = "detail..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">DESCRIPTION</label>
                                @Html.TextBoxFor(model => model.planDetail.description, new { @class = "form-control form-control-user", @placeholder = "description..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">CREATED BY</label>
                                @Html.DropDownListFor(n => n.saleId, new SelectList(Model.saleList, "id", "modelName"), new { @class = "form-control form-control-user" })

                            </div>*@

                            <div class="form-group col-lg-6 row">
                                <div class="form-group col-lg-2 row">
                                    <a href="@Url.Action("List","Customer")" class="btn btn-danger btn-user btn-block" style="margin-left: 10px">Cancel</a>
                                </div>
                                <div class="form-group col-lg-2 row">
                                    <button type="submit" class="btn btn-primary btn-user btn-block" style="margin-left: 10px" onclick="myFunction()">Save</button>
                                </div>

                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            alert("Create Customer success!");
        }
    </script>
</body>
</html>

