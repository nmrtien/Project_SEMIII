
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model E_Project.Areas.Admin.Model.CustomerDetailModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Plan</title>
</head>
<body>
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">List Plan</h1>
        @*<p class="mb-4">
                DataTables is a third party plugin that is used to generate the demo table below.
                For more information about DataTables, please visit the <a target="_blank"
                                                                           href="https://datatables.net">official DataTables documentation</a>.
            </p>*@

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><a href="@Url.Action("Detail","Customer", new { id = @Model.customerId })">BACK</a></h6>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow-x: hidden !important">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background-color: #e0f9f0;">
                                <th>ID</th>
                                <th>Plan Name</th>

                                <th>Created Date</th>
                                <th>Status</th>
                                <th style="width: 120px !important; min-width: 120px !important"></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr style="background-color: #e0f9f0;">
                                <th>ID</th>
                                <th>Product Name</th>

                                <th>Created Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.Plans)
                            {
                                <tr>
                                    <td>@item.N_ID</td>
                                    <td>@item.S_NAME</td>

                                    <td>@item.D_CREATED.ToString("dd/MM/yyyy")</td>
                                    <td>@item.S_STATUS</td>
                                    <td>
                                        <a href="@Url.Action("PlanDetail","Customer", new { customerId = @Model.customerId, planId = @item.N_ID })" style="  margin-left: 5px; font-size: 12px !important">SELECT</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
    <!-- Edit Modal-->



</body>
</html>
