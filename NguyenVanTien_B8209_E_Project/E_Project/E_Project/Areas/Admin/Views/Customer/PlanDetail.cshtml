
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model E_Project.Areas.Admin.Model.PlanDetailModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DETAIL</title>
</head>
<body>
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12 text-center">
                    <div class="p-5 text-center">
                        <div class="form-group col-lg-12 text-center">
                            <h1 class="h4 text-gray-900 mb-4">PLAN DETAIL</h1>
                        </div>

                        @using (Html.BeginForm())
                        {


                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">EXPRIRE DATE</label>
                                @Html.TextBoxFor(model => model.exprireDate, new { @class = "form-control form-control-user", @type = "date" })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">AMOUNT</label>
                                @Html.TextBoxFor(model => model.amount, new { @class = "form-control form-control-user", @placeholder = "Amout...", @type = "number", @min = "1" })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">DETAIL</label>
                                @Html.TextBoxFor(model => model.detail, new { @class = "form-control form-control-user", @placeholder = "detail..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">DESCRIPTION</label>
                                @Html.TextBoxFor(model => model.description, new { @class = "form-control form-control-user", @placeholder = "description..." })

                            </div>

                            <div class="form-group col-lg-6 row">
                                <div class="form-group col-lg-3 row">
                                    <a href="@Url.Action("List","Customer")" class="btn btn-danger btn-user btn-block" style="margin-left: 10px">Cancel</a>
                                </div>
                                <div class="form-group col-lg-3 row">
                                    <button type="submit" class="btn btn-primary btn-user btn-block" style="margin-left: 10px">Save</button>
                                </div>
                                </div>
                                }


                            </div>
                        </div>
            </div>
        </div>
    </div>
    
</body>
</html>

