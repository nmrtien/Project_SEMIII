
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model ModelEntity.Frameworks.TB_CUSTOMER
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DETAIL</title>
</head>
<body>
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12 text-center">
                    <div class="p-5 text-center">
                        <div class="form-group col-lg-12 text-center">
                            <h1 class="h4 text-gray-900 mb-4">@Model.S_NAME</h1>
                        </div>

                        @using (Html.BeginForm())
                        {

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">ACCOUNT</label>
                                @Html.TextBoxFor(model => model.S_ACCOUNT, new { @class = "form-control form-control-user", @placeholder = "account..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">PASSWORD</label>
                                @Html.TextBoxFor(model => model.S_PASSWORD, new { @class = "form-control form-control-user", @placeholder = "password..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">CUSTOMER NAME</label>
                                @Html.TextBoxFor(model => model.S_NAME, new { @class = "form-control form-control-user", @placeholder = "customer name..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">PHONE</label>
                                @Html.TextBoxFor(model => model.S_PHONE, new { @class = "form-control form-control-user", @placeholder = "phone..." })

                            </div>

                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">ADDRESS</label>
                                @Html.TextBoxFor(model => model.S_ADDRESS, new { @class = "form-control form-control-user", @placeholder = "address..." })

                            </div>
                            <div class="form-group col-lg-12">
                                <label for="exampleInputEmail1" style="float:left !important">DESCRIPTION</label>
                                @Html.TextBoxFor(model => model.S_DESCRIPTION, new { @class = "form-control form-control-user", @placeholder = "description..." })

                            </div>

                           
                                <div class="form-group col-lg-12">
                                    <label for="exampleInputEmail1" style="float:left !important">PLAN</label>
                                    @Html.TextBoxFor(model => model.PLAN_NAME, new { @class = "form-control form-control-user", @readonly = "true" })

                                </div>

                       

                            <div class="form-group col-lg-6 row">
                                <div class="form-group col-lg-3 row">
                                    <a href="@Url.Action("List", "Customer")" class="btn btn-danger btn-user btn-block" style="margin-left: 10px">Cancel</a>
                                </div>
                                @if (@Model.PLAN_NAME == null || @Model.PLAN_NAME.Equals("") == true)
                                {
                                    <div class="form-group col-lg-3 row">
                                        <a href="@Url.Action("SelectPlan","Customer", new { id = @Model.N_ID })" class="btn btn-warning btn-user btn-block" style="margin-left: 10px">Add Plan</a>
                                    </div>
                                }


                                <div class="form-group col-lg-3 row">
                                    <button type="submit" class="btn btn-primary btn-user btn-block" style="margin-left: 10px" onclick="myFunction()">Save</button>
                                </div>

                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            alert("Create Customer success!");
        }
    </script>
</body>
</html>

