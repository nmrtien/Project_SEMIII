
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model List<ModelEntity.Frameworks.TB_ACCOUNT>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EMPLOYEE</title>
</head>
<body>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">List Account</h1>


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><a href="@Url.Action("Create","Account")">Add new</a></h6>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow-x: hidden !important">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="background-color: #e0f9f0;">
                                <th>ID</th>
                                <th>Account</th>
                                <th>Password</th>
                                <th>Type</th>
                                <th>FullName</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Bithday</th>
                                <th>Technical</th>
                                <th>Store</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th style="width: 120px !important; min-width: 120px !important"></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr style="background-color: #e0f9f0;">
                                <th>ID</th>
                                <th>Account</th>
                                <th>Password</th>
                                <th>Type</th>
                                <th>FullName</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Bithday</th>
                                <th>Technical</th>
                                <th>Store</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.N_ID</td>
                                <td>@item.S_ACCOUNT</td>
                                <td>@item.S_PASSWORD</td>
                                <td>@item.S_TYPE</td>
                                <td>@item.S_FULLNAME</td>
                                <td>@item.S_PHONE</td>
                                <td>@item.S_ADDRESS</td>
                                <td>@item.D_BIRTHDAY.ToString("dd/MM/yyyy")</td>
                                <td>@item.S_TECHNICAL</td>
                                <td>@item.STORE_NAME</td>
                                <td>@item.DEPARTMENT_NAME</td>
                                <td>@item.S_STATUS</td>
                                <td>
                                    <a href="@Url.Action("Edit","Account", new { n_id = @item.N_ID })" style="margin-left: 5px">Edit</a>

                                    @if (@item.S_STATUS.Equals("Active"))
                                    {
                                        <a href="@Url.Action("UpdateStatusAccount","Account", new { type = @item.S_TYPE, n_id = @item.N_ID, s_status = @item.S_STATUS })" style="margin-left: 10px;color: red" onclick="myFunction()">
                                            InActive
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("UpdateStatusAccount","Account", new { type = @item.S_TYPE, n_id = @item.N_ID, s_status = @item.S_STATUS })" style="margin-left: 10px;color: red" onclick="myFunction()">
                                            Active
                                        </a>
                                    }

                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script>
        function myFunction() {
            alert("Update Account success!");
        }
    </script>
</body>
</html>
