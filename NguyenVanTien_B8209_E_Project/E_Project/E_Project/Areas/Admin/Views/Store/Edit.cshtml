
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@model ModelEntity.Frameworks.TB_STORE
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12 text-center" style="padding-left: 500px !important">
                    <div class="p-5 text-center">
                        <div class="form-group col-lg-6 text-center">
                            <h1 class="h4 text-gray-900 mb-4">EDIT STORE</h1>
                        </div>

                        @using (Html.BeginForm())
                        {

                            

                            <div class="form-group col-lg-6">
                                @Html.TextBoxFor(model => model.S_ID, new { @class = "form-control form-control-user", @placeholder = "ID...", @readOnly = "true" })

                            </div>
                            <div class="form-group col-lg-6">
                                @Html.TextBoxFor(model => model.S_NAME, new { @class = "form-control form-control-user", @placeholder = "Store name..." })

                            </div>
                            <div class="form-group col-lg-6">
                                @Html.TextBoxFor(model => model.S_ADDRESS, new { @class = "form-control form-control-user", @placeholder = "ADDRESS..." })

                            </div>
                            <div class="form-group col-lg-6">
                                @Html.TextBoxFor(model => model.S_CONTACT, new { @class = "form-control form-control-user", @placeholder = "Contact..." })

                            </div>

                            <div class="form-group col-lg-6">
                                @Html.TextBoxFor(model => model.S_STATUS, new { @class = "form-control form-control-user", @placeholder = "Store name...", @readOnly = "true" })

                            </div>

                          

                            <div class="form-group col-lg-6 row" style="margin-left: 20px">
                                <div class="form-group col-lg-6 row">
                                    <a href="@Url.Action("List","Store")" class="btn btn-danger btn-user btn-block" style="margin-left: 10px">Cancel</a>
                                </div>
                                <div class="form-group col-lg-6 row">
                                    <button type="submit" class="btn btn-primary btn-user btn-block" style="margin-left: 10px" onclick="myFunction()">Save</button>
                                </div>

                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            alert("Update Store success!");
        }
    </script>
</body>
</html>
