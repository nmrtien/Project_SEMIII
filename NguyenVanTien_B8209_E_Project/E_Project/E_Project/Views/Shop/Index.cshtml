
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
@using E_Project.Areas.Admin.Utils
@model List<ModelEntity.Frameworks.TB_STORE>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container">
        <section class="py-5 bg-light">
            <div class="container">
                <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                    <div class="col-lg-6">
                        <h1 class="h2 text-uppercase mb-0">SHOP</h1>
                    </div>
                    <div class="col-lg-6 text-lg-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-lg-end mb-0 px-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">SHOP</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <!-- CATEGORIES SECTION-->
        <section class="pt-5">
            <header class="text-center">
                <p class="small text-muted small text-uppercase mb-1">Carefully created connections</p>
                <h2 class="h5 text-uppercase mb-4">Browse our shop</h2>
            </header>
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-md-6 mb-6 mb-md-0" style="margin-top: 50px">
                    <div style="font-weight: bold; color: black">  @item.S_NAME</div>
                    <div><i class="fas fa-store-alt" style="margin-right: 10px">  </i>@item.S_ADDRESS</div>
                    <div><i class="fas fa-phone-square" style="margin-right: 15px;margin-left: 2px"></i>@item.S_CONTACT</div>
                </div>
                }
            </div>
        </section>


    </div>

</body>
</html>

